<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>MajorVersion</key>
		<integer>8</integer>
		<key>MinorVersion</key>
		<integer>0</integer>
		<key>PageTemplate</key>
		<dict>
			<key>Image</key>
			<string>site10_collections.jpg</string>
			<key>Caption</key>
			<!--Captions should be unique to PageTemplates -->
			<string>Collection Page</string>
			<key>Description</key>
			<string>This page option contains 112-pixel thumbnails laid out 4 rows by 3 columns.  This option is better suited for display of minimal field information. Graphics for removing from favorites and viewing detail are shown beneath each thumbnail. The Filename field is displayed by default.</string>
			<key>Collections</key>
			<!-- This should match PageType -->
			<dict>
				<key>SortResults</key>
				<true/><key>SortSelection</key>
				<string>Filename</string>
				<key>ThumbnailSizeEnabled</key>
				<true/>
				<key>ThumbnailSize</key>
				<string>112</string>
				<key>RowsEnabled</key>
				<true/>
				<key>Rows</key>
				<integer>2</integer>
				<key>ColumnsEnabled</key>
				<true/>
				<key>Columns</key>
				<integer>3</integer>
				<key>OnClickAction</key>
				<string>Show details</string>
				<key>AllowDownloadOfCollection</key>
				<true/><key>DownloadOriginals</key>
				<!--switch originals or Previews -->
				<false/>
				<key>AllowZipFormat</key>
				<true/><key>AllowSitFormat</key>
				<true/><key>ShowDownloadLink</key>
				<true/><key>StyleSheet</key>
				<string>Effervescence.css</string>
				<key>DisplayFields</key>
				<array>
					<string>Filename</string></array>
			</dict>
		</dict>
	</dict>
</plist>
