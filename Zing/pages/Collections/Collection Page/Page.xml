<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>MajorVersion</key>
		<integer>8</integer>
		<key>MinorVersion</key>
		<integer>0</integer>
		<key>PageTemplate</key>
		<dict>
			<key>Image</key>
			<string>site10_collections.jpg</string>
			<key>Caption</key>
			<!-- Captions should be unique to PageTemplates -->
			<string>Collection Page (single column)</string>
			<key>Description</key>
			<string>This page option contains 112-pixel thumbnails laid out a single column by 10 rows. The Description field is displayed as a title element and links to detail page. This feature is not modifiable via the NetPublish Assistant. Graphics for removing from favorites and viewing detail are shown beneath each thumbnail. Filename, Keywords and Cataloged fields are displayed by default. </string>
			<key>Collections</key>
			<!-- This should match PageType -->
			<dict>
				<key>SortResults</key>
				<false/>
				<key>SortSelection</key>
				<string>Filename</string>
				<key>ThumbnailSizeEnabled</key>
				<true/>
				<key>ThumbnailSize</key>
				<string>112</string>
				<key>RowsEnabled</key>
				<true/>
				<key>Rows</key>
				<integer>10</integer>
				<key>ColumnsEnabled</key>
				<true/>
				<key>Columns</key>
				<integer>1</integer>
				<key>OnClickAction</key>
				<string>Show details</string>
				<key>AllowDownloadOfCollection</key>
				<false/>
				<key>DownloadOriginals</key>
				<!-- switch originals or Previews -->
				<false/>
				<key>AllowZipFormat</key>
				<false/>
				<key>AllowSitFormat</key>
				<false/>
				<key>ShowDownloadLink</key>
				<false/>
				<key>StyleSheet</key>
				<string>Bravado.css</string>
				<key>DisplayFields</key>
				<array>
					<string>Filename</string><string>Keywords</string><string>Cataloged</string>
				</array>
			</dict>
		</dict>
	</dict>
</plist>
